[
    {
        "author": "Adi Leticia Juárez",
        "title": "Nos Guiará El Amor",
        "text": [
            [
                "Kiara",
                "En un sitio ideal",
                "Aún pude encontrar",
                "De necesitar, el mundo enfrentar",
                "Quiero un mundo en que",
                "No haya nadie más",
                "Tal vez yo no tenga el valor",
                "Más dentro de mi corazón"
            ],
            [
                "Lo sé",
                "Nos guiará el amor",
                "Todo sitio es mi hogar",
                "Si siempre estamos juntos al fin",
                "Brillará el sol",
                "Y yo te amaré",
                "Pues hoy te encontré",
                "Nos guiará el amor"
            ],
            [
                "Kovú",
                "Yo sin ti y tu amor",
                "Más hoy comprendí",
                "No es malo el amor",
                "Que nunca tiene fin",
                "Brilla en tu mirar",
                "Un mundo feliz"
            ],
            [
                "Kiara y Kovú",
                "Y si comprendiéndose más",
                "La dicha que tu amor me da",
                "Sabrán"
            ],
            [
                "Nos guiará el amor",
                "Todo sitio es nuestro hogar",
                "Si siempre estamos juntos al fin",
                "Brillará el sol",
                "Y yo te amaré",
                "Pues hoy te encontré",
                "Nos guiará el amor",
                "Sé que nos guiará el amor."
            ]
        ]
    }
]