[
    {
        "author": "Faces In Disguise",
        "title": "Visita En Sueño",
        "text": [
            [
                "Muestrame colores",
                "que apaguen esa mueca",
                "y la burla de tu estela gris",
                "que florezca de mis manos",
                "el encanto de un sendero",
                "como arrullo de humo negro"
            ],
            [
                "Puedo ver que aquí",
                "no es usual gemir y huir",
                "en el canto",
                "he de encontrar",
                "la vigilia que sugiere",
                "disputarme en sueños",
                "el despertar"
            ],
            [
                "De momento lo presiento",
                "el camino se enloquece",
                "mas cantando me guía",
                "la distante melodía,",
                "acercandome al intento",
                "de borrar tu matiz."
            ],
            [
                "Puedo ver que aquí",
                "no es usual gemir y huir",
                "en el canto",
                "he de encontrar",
                "la vigilia que sugiere",
                "disputarme en sueños",
                "el despertar"
            ],
            [
                "Puedo ver que aquí",
                "no es usual gemir y huir",
                "en el canto",
                "he de encontrar",
                "la vigilia que sugiere"
            ]
        ]
    }
