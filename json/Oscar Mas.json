[
    {
        "author": "Oscar Mas",
        "title": "Porque la quiero",
        "text": [
            [
                "No quiero siempre tener que callar",
                "Pedir disculpas",
                "Porque la quiero y necesito",
                "Como la tierra al sol",
                "Necesito su amor",
                "Con la esperanza yo vivo en mi corazón",
                "Hasta que regrese a mí"
            ],
            [
                "Porque la quiero y necesito",
                "Extraño su amor",
                "Sin ella muy solo estoy",
                "La oigo cantando",
                "Trayendo nueva fuerza a mi amor",
                "Hasta que regrese a mí"
            ],
            [
                "Leguas aparte en mi corazón",
                "Puede oír nuestra canción",
                "Estoy seguro, no duraré",
                "Sin su amor por mí"
            ],
            [
                "Porque la quiero y necesito",
                "Como respirar",
                "Esto se llama amor",
                "Ahora veo, es claro",
                "Sin ella hay dolor",
                "Diferencias no quiero jamás",
                "Les digo adiós",
                "Es mi oportuniodad, y todo porque",
                "¡la quiero!"
            ]
        ]
    }
]