[
    {
        "author": "Asgarth",
        "title": "Ahaztezina Izango Dela",
        "text": [
            [
                "Begirada bat (e)ta ezin dut gehiago ez...",
                "irribarre bat (e)ta ondatuta nago...",
                "Orain maitasunaren kalean",
                "oinez inongo norabide gabe."
            ],
            [
                "Ez naiz ni hitz ederrekin trebea;",
                "ez dizut ilargia gaur ekarriko.",
                "Baina gauza bat argi izan ezazu,begiratu zaidazu",
                "ahaztezina izango dela."
            ],
            [
                "Ez naiz zure printze urdina izango",
                "muxu batez esnatuko zaituena.",
                "Ez zaitez nire albotik urrundu",
                "ahaztezina izango dela."
            ],
            [
                "Une guztiek abesti bat daukate,",
                "garai hobe bateko oroitzapena.",
                "Zure ezpainetara iristen banaiz",
                "ziur kantu hau ahaztuko ez duzula..."
            ],
            [
                "Bakarrik sentitzen naizen",
                "une latz gogorretan,",
                "zure aurpegia oroitzen",
                "guztia sendatzen da."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Amaigabeko Lurraldea",
        "text": [
            [
                "Iluntasunean argia ikusi zuen",
                "Txirotasuna amaigabeko lurraldean.",
                "Ixiltasunak dena entzun zuen",
                "Eta ezerretik sortua izan zinen. (Bis)"
            ],
            [
                "Maitasunaren fruitu izan dena",
                "Gorrotoaren esklabu bihurtu da."
            ],
            [
                "Indartsuenaren menpean zaude",
                "Eta ahulenak alboan erortzen. (Bis)"
            ],
            [
                "Pobrezia! Da jende honek duena.",
                "Justizia! Zein ote da hiltzaile, Negarren jabe?",
                "Gobernuak! Nola joka dezake!",
                "Itsua da! Lurraldea hildakoz apaintzen ari da!!"
            ],
            [
                "Lurrean etzanda hezur multzo bat dardarrez",
                "Tristuraz beterik ditu begiak negarrez."
            ],
            [
                "Pobrezia! Da jende honek duena.",
                "Justizia! Zein ote da hiltzaile, Negarren jabe?",
                "Gobernuak! Nola joka dezake!",
                "Itsua da! Lurraldea hildakoz apaintzen ari da!!"
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Atzeri",
        "text": [
            [
                "Indio zahar jakintsuen artean",
                "kondaira badabil beraien ahotan.",
                "Atxeri zen kontzientziaren semea",
                "basakeriari zigorra ezartzera."
            ],
            [
                "Aintzinako bakearen ixila",
                "borroka oihuez estalirik guztia.",
                "Hitza baztertuz indarkeria inposatuz",
                "hildakoen (arimak pilatuz)."
            ],
            [
                "Gaur, gaur-egun (e)ta beti",
                "gauero oraindik agertzen da.",
                "Egindako akatsak gogoratuz",
                "heriotzaren garraxia."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Azken Nahia",
        "text": [
            [
                "Lotuta hago, ohe bati lotuta",
                "ezin gehiago, lasaitasun eskean.",
                "Gertu ikusten duk bai,",
                "baina askatasuna urrun daukak.",
                "Hik egin dek aukera baina agonia",
                "luzatzen zaik segunduro."
            ],
            [
                "Amaitu nahi dek!",
                "non daude oinarrizko diren eskubideak?",
                "Amaitu nahi dek!",
                "amets gaizto honekin bai!"
            ],
            [
                "Euren legeak (e)ta printzipio moralek",
                "dute oztopatzen betirako bakea.",
                "Erabakiak hartzen",
                "jainko izatera jolastu nahi ditek.",
                "Postura egoista, alaitzen da bista",
                "bertan ikusi ezkero."
            ],
            [
                "Zeruaren ateetan noiz irekiko ote zai.",
                "Hire borondatearen azken nahia."
            ],
            [
                "Gizakiaren altxorra bizia bera bada,",
                "esannahi dena galtzen da hire baitan.",
                "Azken nahia ukatua..."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Edurnezuri",
        "text": [
            [
                "Bistas ezagutzen nuen,",
                "larunbat gaueko neska polita zen,",
                "askok maite zuten bera."
            ],
            [
                "Hots egiten zidan arren",
                "urrun jarraitzen nuen",
                "baina gaueko giroan",
                "nereak egin zuen.",
                "Argi gabeko kalean",
                "biok elkar begira,",
                "zure soineko txuriaz",
                "zeharo txundituta."
            ],
            [
                "Bere besoetan nahi gabe",
                "preso bat bilakatua naiz."
            ],
            [
                "Azkar gerturatu nintzen",
                "kontzientzia hartu gabe.",
                "Muxu eder bat izan zen",
                "estarritik su ematen.",
                "Ahoa gozo,",
                "mingaina bero.",
                "Errudun nintzen",
                "hurrengo goizean."
            ],
            [
                "Aurrean izatean uko egingo diot,",
                "atrakzioa aurka izan arren.",
                "Berak sumendi baten garraren antzera",
                "erretzen nau nere erraietan.",
                "Berak itsasoko ur gaziaren antzera",
                "itotzen nau nere erraietan.",
                "Barrutik erretzen nau(e)n sugarra",
                "kemen hutsez ez dut itzaliko.",
                "Zugandik urrundu beharrean,",
                "ziur ez zaitudala ahaztuko."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Ekaitza",
        "text": [
            [
                "Ekaitza dator, barealdia",
                "Iritxi ondoren, ixiltasuna",
                "Argitasunaren bidea galdu da,",
                "ezintasunezko amets gaiztoa."
            ],
            [
                "Libre izatea, mirari nahia",
                "Zure aukera itxoitea da.",
                "Argitasunaren bidea galdu da,",
                "ezintasunezko amets gaiztoa."
            ],
            [
                "Zerua zurea da, aska itzazu",
                "zeure hegalak."
            ],
            [
                "Zure bizi osoa galtzen ari da",
                "ekaitza jota.",
                "Ilea bustita, gauean barrena",
                "galduta!"
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Eman Pausoa",
        "text": [
            [
                "Atetik sartu (e)ta berehala",
                "oihu eginez (e)ta neregana,",
                "bultzaka arrazoi gabe, edozein da bere aitzakia.",
                "Irainek ez dute hasetsean",
                "datorrenaren ispilu dira;",
                "urtetan jasan dudan borroka galdua."
            ],
            [
                "(E)ta bera lo! nik negar etengabe",
                "momentu oro erne."
            ],
            [
                "Gainera gaizki sentitzen naiz",
                "nere errua dela pentsatzen dut maiz.",
                "Kandelaren antzera itzali didate bizia.",
                "Azkenekoa dela esan dit",
                "urte honetan laupabost aldiz,",
                "ezin dut gehi(ag)o jasan, salatzera noa!"
            ],
            [
                "Pausoa emateko indarrik ez,",
                "urte asko dira, hainbeste.",
                "Baina bizitzeko eman beharrekoa,",
                "pentsatu zuregan merezi duzula!"
            ],
            [
                "... emakume askoren hilobia,",
                "borroka ezazu merezi duzula!"
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Esnatu Gara",
        "text": [
            [
                "Ekaitzak moztu digu lehenbailehen",
                "barealdia guretzako.",
                "Arimak gora igo nahi arren,",
                "barnean mantentzen dut harro."
            ],
            [
                "Berriro ere esnatu gara,",
                "arnastea haina behar dugulako.",
                "Argi etsaiek ez zutela nahi..",
                "Baina hemen gaude, (e)ta zuek alde,",
                "arrastoa uzteko prest.",
                "Hala beharko!"
            ],
            [
                "Olatu gainean izateak",
                "beti ematen du zeresana;",
                "aurretik irrifarra goxoa,",
                "atzetik labainkada latza."
            ],
            [
                "Humiltasunez jaioa,",
                "sentimaenduek gordea.",
                "Ondamuaren sareek",
                "ezin apurtu, halere..."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Gezurrak",
        "text": [
            [
                "Gezurraren jantzia mila kolorekoa",
                "hitz ederrez hornitua.",
                "Hainbat itxurakeriz gaur babestu nahian",
                "heriotza."
            ],
            [
                "Beren burua estali nahia,",
                "jasoko dute ordaina.",
                "Harria bota eta gero",
                "eskua gorde.",
                "Baina bizitza puta honetan",
                "errazago harrapatzen da",
                "errena baino",
                "gezurtia dena."
            ],
            [
                "Akatsak estaltzeko hainbat bide badago,",
                "zuena da okerrena;",
                "inozotzat hartuak beren begien aurrean.",
                "Mendekua."
            ],
            [
                "Gorpuak kaleean etzanda,",
                "senideen negar malkoak.",
                "(E)ta zuek errudunak bilatzen,",
                "ahoa gezur zikinez betetzen.",
                "Ez dugu barkatuko.",
                "Ez dugu ahaztuko.",
                "Barkaezina da.",
                "Gorpuak kalean etzanda",
                "(e)ta zuen antzerki sinestezina."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Hitzak Hitz Direlako",
        "text": [
            [
                "Hitzak haizeak eramaten di(e)tunez,",
                "etorri bezala ahazten direnez,",
                "“maite zaitut” eta horrelako esanek",
                "balorea tristeki galdua daukate.",
                "Horregatik ekintzak nahiago ditut;",
                "momentu latz batean besarkada bat,",
                "negar malkoz busti dudan sorbalda",
                "bakarrik nago(e)la sentitzen dudanean."
            ],
            [
                "Egurrezko arantza baten moduan",
                "sartu zara nere bihotza erdian.",
                "Hori azaltzeko baladarik ez da,",
                "beldur gabe hau da eskeintzen dizudana;"
            ],
            [
                "Lagun bat, zu zara, neretzat."
            ],
            [
                "Horregatik ekintzak nahiago ditut;",
                "elkar eskeintzen ditugun begiradak,",
                "atzo oparitu zenidan irribarra",
                "ordaintzeko ez urrerik mundu osoan."
            ],
            [
                "Hitzik gabe biok bat egin arte",
                "Mutu, hitzak hitz direlako.",
                "Laztan bidez, taupada bakar batez,",
                "behar dudan guztia zara..."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Ideia Antolatuak",
        "text": [
            [
                "Gure bizitza antolatua, zeure agerpen arte",
                "Erdian sartu zinen",
                "Gure ideia antolatuak, sinismen berri bat",
                "Inposatua izan zen.",
                "Burua jaten dizute, beraien antzera",
                "Bihurtu nahi zaituzte."
            ],
            [
                "Zure arnasaren menpe gaude",
                "Agertzen zaigun bidea, aukera dezagun, oh!"
            ],
            [
                "0h, oh!!! Zure arnasa, beldurraren kiratsa",
                "zeure irudia goraipatu, aintzinako ideiak ukatu!"
            ],
            [
                "Indartsuak agintzen du legeak eginez",
                "Menperatu nahi gaitu",
                "Eta bakoitzaren indarra haunditzen doanean",
                "Berdina egiten dugu"
            ],
            [
                "Zure arnasaren menpe gaude",
                "Agertzen zaigun bidea, aukera dezagun, oh!"
            ],
            [
                "Berak du egi bakarra, bortxatu itsutu naute!"
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Jainkoen Egoitza",
        "text": [
            [
                "Garai batean, Infernua eta Zerua",
                "soilik existitzen, Jainkoek bitarteko",
                "hiri bat sortu zuten eta bertan",
                "tenplu bat eraiki zuten,",
                "Jainkoen egoitza;",
                "ASGARTH."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Magia",
        "text": [
            [
                "Magia eta zaldunak",
                "Bizi ziren munduan",
                "Gerlari bat jaio omen zen",
                "Berak zuen indarra",
                "Erabiltzen ezpata",
                "Bihurtzen zen garaitezina"
            ],
            [
                "Hainbat guda eta etsai",
                "Garaitzen zituen lasai",
                "Denak bere borrokaren zain",
                "Ezpata mugituaz",
                "Guztiak akabatuz",
                "Herriko gendea babestuz"
            ],
            [
                "Zerutik agertzen zen",
                "Bere zaldi gainean",
                "Odol beltza zuen zainetan",
                "Aurkakoak zapaltzen",
                "Ohinez elikatzen",
                "Bere erreinura bueltatzen zen"
            ],
            [
                "Gudaren erdian",
                "Jainko bat borrokan",
                "Etsaiak akabatzen"
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Urtetan",
        "text": [
            [
                "Denborak gorrotoan gauzatua",
                "garai bateko begirunea.",
                "Goian ba ote dago",
                "erregua entzun duenik,",
                "bere lekuan jartzen",
                "behintzat asmatu duena."
            ],
            [
                "Jada ez dut zure hegalen beharrik",
                "kabia uzteko gai den txori bihurtua.",
                "Bide berri honetan konpromezua,",
                "gauzak zuzen joango diren ziurtasuna."
            ],
            [
                "Egonezina haizea bezala;",
                "ez ikusi arren, somatzen da.",
                "Benetako antzerki honen",
                "aktore nagusi gera,",
                "zu hegoalderantz eta",
                "ni berriz iparralderantz."
            ],
            [
                "Ikus dezaket",
                "zure begietan",
                "boterearen zama."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Zatoz Bila",
        "text": [
            [
                "Zuk desiratzen duzunaren jabe naiz,",
                "zatoz bila belauniko..."
            ],
            [
                "Erregutu (e)zazu",
                "hainbeste desiraren erru.",
                "Nere menpe zaudela ikusi nahi dut."
            ],
            [
                "Nik daukat giltza erraietan gordeta,",
                "zatoz bila, arnas gabe..."
            ],
            [
                "Sufrimendu hon(e)tan ni naiz zure irtenbidea,",
                "alferrik daukazu orain atzera egin,",
                "berriro itzultzea.",
                "Zure etorkizunaren etorkizuna ikusten dut",
                "(e)ta zoriontasuna nere alboan",
                "aurkituko duzu."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Zeren Beldur",
        "text": [
            [
                "Hei! Garraxi egin nahi det inorrek entzun ez arren.",
                "Hei! horrela behar det barruak lehertu baino lehen.",
                "Ze erraz ikusten dugun lastoa bestearen begietan,",
                "kritikak egiten gozatzen dute, baina ni ez naiz holakoa."
            ],
            [
                "Eta zertarako itxura faltsua?",
                "inor ez da inor baino gehiago.",
                "Nola dezakezu be(g)i(ra)tu ispiluan?",
                "pertsona faltsu, burugogorra!"
            ],
            [
                "Ze hipokrita zaren mintzatzen lagun artean:",
                "“Ni naiz liberaleena maitasunaren kontuetan.",
                "Baina ezberdin direnei ez naiz gerturatzen ere,",
                "ea pinpilipausa horretatik zehozer pegatzen zaiten”."
            ],
            [
                "Baina nik ez dut inolako minik egin, zeren beldur dira?",
                "Maitasunaren bidea zabala da, aukeratu."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Zu Gabe",
        "text": [
            [
                "Non dago, non sartu da gure arteko oihua?",
                "Bakarrik bizitzeak beldurra sortzen du nigan.",
                "Ezin dut zu gabe, bakarrik sentitzen naiz,",
                "Zeure irudi alaia oroitzen ez dudanean."
            ],
            [
                "Ez utzi horrela nere barneko sentimendu hau,",
                "Zure alboan egon nahi nuke bizi osoan!"
            ],
            [
                "Nere ilargi maitea, bizitzeko arrazoia",
                "Nerekin bizi ezazu amets zoragarri hau."
            ],
            [
                "Nere barne bakartian, zeure irudi atsegina.",
                "Behar zaitut maitea, nik ezin dut zu gabe"
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Zu Zeu Etsai",
        "text": [
            [
                "Nahigabe sortutako joko hura",
                "bion arteko leian bihurtu da.",
                "Begira zure nortasuna;",
                "ispilu aurreko gatazka."
            ],
            [
                "Azkenean lau horma ilunen artean",
                "ipar orratzaren bila, borroka etengabean."
            ],
            [
                "Hartutako kolpearen indarra",
                "aurrera egiteko behar duzuna.",
                "Pentsa, zure itzala",
                "alde egingo ez duen bakarra dela."
            ],
            [
                "Azkenean ekaitza guztien aurka,",
                "askatasunaren mendi gailurrean hegaka."
            ],
            [
                "Zu zeu etsai.",
                "Ireki begiak (e)ta aurrera.",
                "Garaipenaren zai",
                "zeure burua maitatuaz."
            ]
        ]
    },
    {
        "author": "Asgarth",
        "title": "Zuzenean",
        "text": [
            [
                "Oinetatik gora zirrara zabaltzen da",
                "urteak pasa arren.",
                "Taupadak bizkor bularra ito beharrean."
            ],
            [
                "Jendea zai daukagu lehertzeko gogoz",
                "eztanda berri baterako prest."
            ],
            [
                "Maitasunaren pareko sentimendua,",
                "hitzez azal ezina,",
                "salto egin (e)ta argiak pizterakoan"
            ],
            [
                "Zirrara hori tentsio bihurtzen da",
                "buruak astinduz garraxika.",
                "Baxuaren taupada nekaezinek",
                "erritmoak jarraituz indarrez."
            ],
            [
                "Milaka ahotsa batera oiartzunaren jabe direla",
                "erritmoaren itxasoan hegaka.",
                "Aska itzazu hegalak.",
                "Sentimenduak batzen gaitu",
                "Askatasunaren haizea guregan sartzen denean,",
                "abesti bidez. Nahigabe zoratzen naute."
            ]
        ]
    }
]